{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "automated_rules",
  "title": "自动化检查规则库",
  "description": "定义质量控制系统的自动化检查规则",
  "type": "object",
  "required": [
    "规则库"
  ],
  "properties": {
    "规则库": {
      "type": "array",
      "description": "所有自动化检查规则",
      "items": {
        "type": "object",
        "required": [
          "规则ID",
          "规则名称",
          "描述",
          "严重程度",
          "检查方法",
          "修正建议"
        ],
        "properties": {
          "规则ID": {
            "type": "string",
            "description": "规则的唯一标识"
          },
          "规则名称": {
            "type": "string",
            "description": "规则的名称"
          },
          "描述": {
            "type": "string",
            "description": "规则的详细描述"
          },
          "严重程度": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "规则的严重程度"
          },
          "检查方法": {
            "type": "string",
            "description": "检查方法的描述"
          },
          "修正建议": {
            "type": "string",
            "description": "发现问题时修正建议"
          }
        }
      }
    }
  },
  "example": {
    "规则库": [
      {
        "规则ID": "RULE_001",
        "规则名称": "公司名称一致性",
        "描述": "所有公司名称必须在profile库中",
        "严重程度": "high",
        "检查方法": "提取文档中所有公司名称,与profile库中的公司列表比对",
        "修正建议": "请检查公司名称拼写,或补充profile库"
      },
      {
        "规则ID": "RULE_002",
        "规则名称": "人物信息一致性",
        "描述": "所有人物信息必须在profile库中",
        "严重程度": "high",
        "检查方法": "提取文档中所有人名,与profile库中的人物列表比对",
        "修正建议": "请检查人名拼写,或补充profile库"
      },
      {
        "规则ID": "RULE_003",
        "规则名称": "金额一致性",
        "描述": "所有金额必须在关键金额清单中",
        "严重程度": "high",
        "检查方法": "提取文档中所有金额,与关键金额清单比对",
        "修正建议": "请检查金额是否准确,或补充关键金额清单"
      },
      {
        "规则ID": "RULE_004",
        "规则名称": "日期一致性",
        "描述": "所有日期必须在交易时间线中或符合时间逻辑",
        "严重程度": "medium",
        "检查方法": "提取文档中所有日期,验证日期顺序和格式",
        "修正建议": "请检查日期格式是否为YYYY-MM-DD,或补充交易时间线"
      },
      {
        "规则ID": "RULE_005",
        "规则名称": "编号格式一致性",
        "描述": "所有编号必须符合编号体系规则",
        "严重程度": "medium",
        "检查方法": "使用正则表达式验证编号格式",
        "修正建议": "请检查编号格式是否符合规则"
      },
      {
        "规则ID": "RULE_006",
        "规则名称": "表格完整性",
        "描述": "所有表格必须完整,无省略项",
        "严重程度": "high",
        "检查方法": "检查表格行数是否满足要求(设备清单37项、租金表12期等)",
        "修正建议": "请补充表格缺失的行"
      },
      {
        "规则ID": "RULE_007",
        "规则名称": "证据归属一致性",
        "描述": "证据必须与证据归属规划表一致",
        "严重程度": "high",
        "检查方法": "验证证据名称、归属方是否与规划表一致",
        "修正建议": "请检查证据归属是否正确,或更新规划表"
      },
      {
        "规则ID": "RULE_008",
        "规则名称": "计算逻辑正确性",
        "描述": "金额计算逻辑必须正确",
        "严重程度": "high",
        "检查方法": "重新计算,验证结果",
        "修正建议": "请检查计算逻辑是否正确"
      },
      {
        "规则ID": "RULE_009",
        "规则名称": "引用准确性",
        "描述": "对其他文件或阶段的引用必须准确",
        "严重程度": "medium",
        "检查方法": "验证引用的准确性",
        "修正建议": "请检查引用是否准确"
      },
      {
        "规则ID": "RULE_010",
        "规则名称": "格式规范性",
        "描述": "文件格式必须符合标准模板",
        "严重程度": "medium",
        "检查方法": "验证格式是否符合模板要求",
        "修正建议": "请按照标准模板格式调整"
      }
    ]
  }
}
